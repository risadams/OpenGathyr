{
  "name": "opengathyr",
  "version": "1.0.0",
  "description": "A Model Context Protocol server that communicates via RSS feeds",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rss",
    "feed"
  ],
  "author": "Ris Adams",
  "repository": {
    "type": "git",
    "url": "https://github.com/risadams/OpenGathyr.git"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "rss-parser": "^3.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nock": "^13.5.0",
    "supertest": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=7.0.0"
  }
}