{
  "name": "opengathyr",
  "version": "1.0.0",
  "description": "A Model Context Protocol server that communicates via RSS feeds",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "codecov": "codecov",
    "lint": "eslint src/**/*.ts || true",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:strict": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "client": "ts-node src/client/mcp-client.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rss",
    "feed"
  ],
  "author": "Ris Adams",
  "repository": {
    "type": "git",
    "url": "https://github.com/risadams/OpenGathyr.git"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "dotenv": "^16.5.0",
    "node-fetch": "^3.3.2",
    "rss-parser": "^3.13.0",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "babel-jest": "^29.7.0",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nock": "^14.0.4",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=7.0.0"
  }
}
